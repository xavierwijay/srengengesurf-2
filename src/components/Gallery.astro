<section class="section gallery" id="gallery">
  <div class="container">
    <img
      src="/img/stiker/bintanglaut.png"
      alt="Decorative sticker"
      class="about-sticker about-sticker-5"
    />
    <header class="section-header">
      <img
        src="/img/title/PNGGALLERY.png"
        alt="Gallery"
        class="gallery-title-image"
      />
      <p class="section-subtitle">
        Take a look at our latest surf trip photos!
      </p>
    </header>

    <div class="gallery-wrapper">
      <!-- Mobile Gallery (Masonry Grid) -->
      <div class="gallery-mobile">
        <div class="m-masonry-grid" id="mobileGrid">
          <!-- Column 1 -->
          <div class="m-col">
              <div class="m-card h-tall">
                <img src="/img/gallery/g1.png" alt="Epic Surf" loading="lazy" />
                 <div class="m-overlay-mini"><span>Highlight</span></div>
              </div>
              <div class="m-card h-short">
                <img src="/img/mobile/m-g3.png" alt="Activities" loading="lazy" />
              </div>
              <!-- Hidden Items Col 1 -->
              <div class="hidden-item m-card h-short">
                 <img src="/img/mobile/m-g4.png" alt="Sunrise" loading="lazy" />
              </div>
          </div>

          <!-- Column 2 -->
          <div class="m-col">
              <div class="m-card h-short">
                <img src="/img/mobile/m-g2.png" alt="Food" loading="lazy" />
              </div>
              <div class="m-card h-tall">
                 <img src="/img/gallery/g6.png" alt="Memories" loading="lazy" />
              </div>
               <!-- Hidden Items Col 2 -->
              <div class="hidden-item m-card h-tall">
                 <img src="/img/mobile/m-g5.png" alt="Training" loading="lazy" />
              </div>
          </div>
        </div>

        <!-- Clean Expand Button -->
        <div class="mobile-expand-section">
          <button class="expand-btn-text" id="mobileExpandBtn">
            <span class="btn-text">Load More Photos</span>
            <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><polyline points="6 9 12 15 18 9"></polyline></svg>
          </button>
        </div>
      </div>

  <!-- Desktop Gallery (Bento Layout) -->
      <div class="gallery-desktop">
        <div class="bento-grid">
          <!-- Main Large Feature (Left) -->
          <div class="b-card b-main">
            <img src="/img/gallery/g1.png" alt="Epic Surf" loading="lazy" />
             <div class="b-overlay">
                <div class="b-content">
                    <h3>Epic Surf Session</h3>
                    <p>Wediombo Beach</p>
                </div>
            </div>
          </div>

          <!-- Top Right 1 -->
          <div class="b-card b-sub1">
              <img src="/img/gallery/g6.png" alt="Memories" loading="lazy" />
              <div class="b-overlay">
                <div class="b-content">
                    <h4>Memories</h4>
                    <p>Good times</p>
                </div>
            </div>
          </div>

          <!-- Top Right 2 -->
          <div class="b-card b-sub2">
              <img src="/img/gallery/g3.png" alt="Fun" loading="lazy" />
               <div class="b-overlay">
                <div class="b-content">
                    <h4>Beach Fun</h4>
                    <p>Activities</p>
                </div>
            </div>
          </div>

          <!-- Bottom Right Wide -->
          <div class="b-card b-wide">
               <img src="/img/gallery/g5.png" alt="Sunrise" loading="lazy" />
               <div class="b-overlay">
                <div class="b-content">
                    <h4>Sunrise Session</h4>
                    <p>Golden Hour</p>
                </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<style>
  /* Mobile Masonry Layout */
  .gallery-mobile { display: flex; flex-direction: column; gap: 24px; }
  
  .m-masonry-grid {
      display: grid;
      grid-template-columns: 1fr 1fr;
      gap: 12px;
  }

  .m-col {
      display: flex;
      flex-direction: column;
      gap: 12px;
  }

  .m-card {
      position: relative;
      border-radius: 12px;
      overflow: hidden;
      width: 100%;
      background: #f0f0f0;
      box-shadow: none; /* Cleaner look */
  }

  .m-card.h-short { height: 160px; }
  .m-card.h-tall { height: 240px; }
  
  .m-card img {
      width: 100%;
      height: 100%;
      object-fit: cover;
      transition: transform 0.5s ease;
  }
  
  /* Subtle zoom on touch/hover */
  .m-card:hover img {
      transform: scale(1.03); 
  }

  /* Minimal Overlay for Key Shots */
  .m-overlay-mini {
      position: absolute;
      bottom: 10px;
      left: 10px;
      background: rgba(0,0,0,0.6);
      padding: 4px 10px;
      border-radius: 20px;
      backdrop-filter: blur(4px);
  }
  .m-overlay-mini span {
      color: white;
      font-size: 0.65rem;
      font-weight: 700;
      text-transform: uppercase;
      letter-spacing: 0.5px;
  }

  /* Hidden Items Logic */
  .hidden-item {
      display: none; 
      opacity: 0;
      transition: opacity 0.4s ease;
  }
  
  .hidden-item.show {
      display: block;
      opacity: 1;
      animation: fadeIn 0.5s ease forwards;
  }
  
  @keyframes fadeIn { from { opacity: 0; transform: translateY(10px); } to { opacity: 1; transform: translateY(0); } }

  /* Minimal Button */
  .mobile-expand-section { display: flex; justify-content: center; margin-top: 8px; }
  
  .expand-btn-text {
      background: rgba(255,255,255,0.8);
      border: 1px solid #e0e0e0;
      border-radius: 30px;
      padding: 10px 24px;
      display: flex;
      align-items: center;
      gap: 8px;
      font-size: 0.85rem;
      font-weight: 600;
      color: #666;
      cursor: pointer;
      transition: all 0.2s ease;
      backdrop-filter: blur(5px);
  }
  
  .expand-btn-text:active {
      background: #f5f5f5;
      transform: scale(0.98);
  }
  
  .expand-btn-text svg {
      transition: transform 0.3s ease;
      width: 16px; 
      height: 16px;
  }
  
  .expand-btn-text.expanded svg {
      transform: rotate(180deg);
  }
  .expand-btn-text.expanded {
      background: #333;
      color: white;
      border-color: #333;
  }

  /* Desktop Bento Grid - Modern & Professional */
  .bento-grid {
      display: grid;
      grid-template-columns: 1.4fr 1fr 1fr;
      grid-template-rows: 250px 250px;
      gap: 20px;
      max-width: 1100px;
      margin: 0 auto;
      grid-template-areas: 
          "main sub1 sub2"
          "main wide wide";
  }

  .b-card {
      position: relative;
      border-radius: 20px;
      overflow: hidden;
      cursor: pointer;
      box-shadow: 0 10px 30px rgba(0,0,0,0.05);
  }

  .b-main { grid-area: main; }
  .b-sub1 { grid-area: sub1; }
  .b-sub2 { grid-area: sub2; }
  .b-wide { grid-area: wide; }

  .b-card img {
      width: 100%;
      height: 100%;
      object-fit: cover;
      transition: transform 0.6s cubic-bezier(0.2, 0.8, 0.2, 1);
  }

  .b-card:hover img {
      transform: scale(1.05); /* Gentle zoom */
  }

  /* Professional Dark Overlay on Hover */
  .b-overlay {
      position: absolute;
      inset: 0;
      background: linear-gradient(to top, rgba(0,0,0,0.8) 0%, rgba(0,0,0,0) 60%);
      opacity: 0;
      transition: opacity 0.4s ease;
      display: flex;
      flex-direction: column;
      justify-content: flex-end;
      padding: 24px;
  }

  .b-card:hover .b-overlay {
      opacity: 1;
  }

  .b-content {
      transform: translateY(10px);
      transition: transform 0.4s ease;
  }
  
  .b-card:hover .b-content {
      transform: translateY(0);
  }

  .b-content h3 { font-size: 1.8rem; font-weight: 700; color: white; margin: 0 0 6px; }
  .b-content h4 { font-size: 1.4rem; font-weight: 700; color: white; margin: 0 0 4px; }
  .b-content p { font-size: 0.95rem; color: rgba(255,255,255,0.9); margin: 0; }

  /* Responsive Display */
  @media (min-width: 768px) {
    .gallery-mobile { display: none; }
  }
  @media (max-width: 767px) {
    .gallery-desktop { display: none; }
  }
</style>

<script>
  const expandBtn = document.getElementById("mobileExpandBtn");
  const hiddenItems = document.querySelectorAll(".hidden-item");
  const btnText = expandBtn?.querySelector(".btn-text");

  if (expandBtn && hiddenItems.length > 0) {
    expandBtn.addEventListener("click", () => {
      // Check if the first hidden item is currently visible
      const isExpanded = hiddenItems[0].classList.contains("show");
      
      if (!isExpanded) {
        // Expand: Show all hidden items
        hiddenItems.forEach(item => item.classList.add("show"));
        expandBtn.classList.add("expanded");
        if(btnText) btnText.textContent = "Close Gallery";
      } else {
        // Collapse: Hide all hidden items
        hiddenItems.forEach(item => item.classList.remove("show"));
        expandBtn.classList.remove("expanded");
        if(btnText) btnText.textContent = "Load More Photos";
        
        // Scroll back to gallery top
        document.getElementById("gallery")?.scrollIntoView({ behavior: 'smooth' });
      }
    });
  }
</script>
