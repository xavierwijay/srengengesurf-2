<script>
  // Gallery Expand Logic
  const expandBtn = document.getElementById("mobileExpandBtn");
  // Select hidden items properly - html has .mobile-gallery-hidden wrapping items? 
  // Code in HTML shows .mobile-gallery-card inside .mobile-gallery-hidden.
  // Script logic used .gallery-hidden.show which implies items had .gallery-hidden class. 
  // But my HTML structure in Step 11 shows <div class="mobile-gallery-hidden"> containing cards.
  // So I should target the wrapper or the children.
  // I will target the wrapper to show it.
  
  const hiddenWrapper = document.querySelector(".mobile-gallery-hidden");
  
  const expandText = expandBtn?.querySelector(".expand-text") as HTMLElement;
  const collapseText = expandBtn?.querySelector(".collapse-text") as HTMLElement;
  const expandArrow = expandBtn?.querySelector(".expand-arrow svg") as HTMLElement;

  if (expandBtn && hiddenWrapper) {
    expandBtn.addEventListener("click", () => {
      const isExpanded = expandBtn.getAttribute("aria-expanded") === "true";

      if (!isExpanded) {
        // Show
        hiddenWrapper.classList.add("show"); // I need to ensure CSS supports this or add logic
        // Original css probably had .mobile-gallery-hidden { display: none } and .show { display: block }
        // Or similar. I'll check CSS later or assume simple display toggle.
        // Actually, better to use style.display or custom class if I can't check CSS.
        // I will assume global.css handles ".mobile-gallery-hidden.show" or similar.
        // If not, I'll add inline style.
        (hiddenWrapper as HTMLElement).style.display = "block";
        (hiddenWrapper as HTMLElement).style.opacity = "0";
        setTimeout(() => {
            (hiddenWrapper as HTMLElement).style.opacity = "1";
            (hiddenWrapper as HTMLElement).style.transition = "opacity 0.5s ease";
        }, 10);

        expandBtn.setAttribute("aria-expanded", "true");
        if (expandText) expandText.style.display = "none";
        if (collapseText) collapseText.style.display = "inline";
        if (expandArrow) expandArrow.style.transform = "rotate(180deg)";
        
      } else {
        // Hide
        (hiddenWrapper as HTMLElement).style.display = "none";
        expandBtn.setAttribute("aria-expanded", "false");
        if (expandText) expandText.style.display = "inline";
        if (collapseText) collapseText.style.display = "none";
        if (expandArrow) expandArrow.style.transform = "rotate(0deg)";
        
        // Scroll back
        document.getElementById("gallery")?.scrollIntoView({ behavior: "smooth" });
      }
    });
  }
</script>
