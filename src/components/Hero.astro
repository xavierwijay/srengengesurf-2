<section class="hero" id="hero" role="banner">
  <!-- SEO H1 - Hidden but accessible -->
  <h1
    style="
      position: absolute;
      left: -9999px;
      width: 1px;
      height: 1px;
      overflow: hidden;
    "
  >
    Srengenge Surf Camp - Layanan Surf Trip Terbaik di Gunung Kidul Yogyakarta &
    Jawa Tengah | Pantai Wediombo
  </h1>
  <div class="hero-content" data-aos="fade-up">
    <img
      src="/img/herotext1.png"
      alt="Srengenge Surf Camp Pantai Wediombo - Pengalaman Selancar Authentic di Yogyakarta"
      class="hero-title"
      data-aos="zoom-in"
      loading="eager"
      fetchpriority="high"
    />
    <div class="hero-cta" data-aos="fade-up" data-aos-delay="200">
      <a
        href="#packages"
        class="btn btn-primary"
        aria-label="Start surfing adventure"
      >
        SURF NOW
      </a>
    </div>
  </div>
</section>
