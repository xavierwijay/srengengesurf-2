<style>
.contact {
  padding-bottom: 80px;
}

.contact-wrapper {
  margin-top: 2rem;
}

.contact-grid {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 3rem;
  align-items: stretch;
}

/* Left Column */
.contact-info {
  display: flex;
  flex-direction: column;
  gap: 2.5rem;
}

.group-title {
  font-size: 1.25rem;
  font-weight: 700;
  color: #1f2937;
  margin-bottom: 1.25rem;
  display: flex;
  align-items: center;
  gap: 0.5rem;
}

.group-title::before {
  content: '';
  display: block;
  width: 4px;
  height: 24px;
  background: #ed9a55;
  border-radius: 4px;
}

/* Action Buttons as Cards */
.action-buttons {
  display: flex;
  flex-direction: column;
  gap: 1rem;
}

.contact-btn {
  display: flex;
  align-items: center;
  gap: 1rem;
  padding: 1rem 1.25rem;
  background: white;
  border-radius: 16px;
  border: 1px solid rgba(0,0,0,0.05);
  box-shadow: 0 4px 6px rgba(0,0,0,0.02);
  text-decoration: none;
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  position: relative;
  overflow: hidden;
}

.contact-btn:hover {
  transform: translateY(-2px);
  box-shadow: 0 10px 20px rgba(0,0,0,0.08);
}

.icon-box {
  width: 48px;
  height: 48px;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 12px;
  flex-shrink: 0;
  color: white;
}

.icon-box svg {
  width: 24px;
  height: 24px;
}

.text-content {
  display: flex;
  flex-direction: column;
}

.label {
  font-size: 0.85rem;
  color: #6b7280;
  font-weight: 500;
}

.value {
  font-size: 1rem;
  font-weight: 600;
  color: #1f2937;
  letter-spacing: -0.01em;
}

/* Specific button styles */
.contact-btn.whatsapp .icon-box {
  background: linear-gradient(135deg, #25D366, #128C7E);
}
.contact-btn.whatsapp:hover {
  border-color: rgba(37, 211, 102, 0.3);
}

.contact-btn.instagram .icon-box {
  background: linear-gradient(45deg, #f09433 0%, #e6683c 25%, #dc2743 50%, #cc2366 75%, #bc1888 100%); 
}
.contact-btn.instagram:hover {
   border-color: rgba(220, 39, 67, 0.3);
}

.contact-btn.email .icon-box {
  background: linear-gradient(135deg, #3b82f6, #1d4ed8);
}
.contact-btn.email:hover {
   border-color: rgba(59, 130, 246, 0.3);
}

/* Address Box */
.address-box {
  background: white;
  padding: 1.5rem;
  border-radius: 20px;
   border: 1px solid rgba(0,0,0,0.05);
  box-shadow: 0 4px 6px rgba(0,0,0,0.02);
  display: flex;
  gap: 1rem;
  align-items: flex-start;
}

.addr-icon {
  font-size: 2rem;
  line-height: 1;
}

.addr-text p {
  margin: 0;
  color: #4b5563;
  line-height: 1.5;
}

.addr-text .venue {
  font-weight: 700;
  color: #111827;
  margin-bottom: 0.25rem;
  font-size: 1.1rem;
}

/* Map Column */
.contact-map {
  height: 100%;
  min-height: 400px;
}

.map-frame {
  width: 100%;
  height: 100%;
  border-radius: 24px;
  overflow: hidden;
  box-shadow: 0 12px 30px rgba(0,0,0,0.1);
  border: 4px solid white;
  position: relative;
  transition: transform 0.3s ease;
}

.map-frame iframe {
  width: 100%;
  height: 100%;
  display: block;
}

/* Responsive */
@media (max-width: 900px) {
  .contact-grid {
    grid-template-columns: 1fr;
    gap: 2rem;
  }
  
  .contact-map {
    min-height: 300px;
    height: 300px;
  }
}

@media (max-width: 480px) {
    .section-header {
    margin-bottom: 2rem;
    }
  
  .contact-btn {
    padding: 0.875rem;
  }
  
  .icon-box {
    width: 40px;
    height: 40px;
  }
  
  .value {
    font-size: 0.95rem;
  }
}
</style>
